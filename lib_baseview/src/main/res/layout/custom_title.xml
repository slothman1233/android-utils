<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_title_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_title_bar_bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y98">

        <LinearLayout
            android:id="@+id/title_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="@dimen/x80"
                android:layout_height="match_parent"
                android:paddingTop="@dimen/y28"
                android:paddingBottom="@dimen/y24"
                android:src="@drawable/base_iv_back" />

            <TextView
                android:id="@+id/txt_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/color_333333"
                android:textSize="16sp"
                android:visibility="gone" />

        </LinearLayout>

        <TextView
            android:id="@id/tv_title"
            android:textSize="18sp"
            android:textColor="@color/color_333333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:maxLines="1" />

        <LinearLayout
            android:id="@+id/btn_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_more"
                android:layout_width="@dimen/x88"
                android:layout_height="@dimen/y90"
                android:paddingLeft="@dimen/x24"
                android:paddingTop="@dimen/y28"
                android:paddingRight="@dimen/x26"
                android:paddingBottom="@dimen/y28" />

            <TextView
                android:id="@+id/txt_more"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/y90"
                android:textSize="14sp"
                android:textColor="@color/color_333333"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:paddingRight="@dimen/x26"
                android:visibility="gone" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>